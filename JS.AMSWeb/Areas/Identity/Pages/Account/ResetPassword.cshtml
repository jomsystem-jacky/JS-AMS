@page
@using JS.AMSWeb.Areas.Identity.Pages.Account;
@model ResetPasswordModel



@{
    ViewData["Title"] = "Reset password";
}

<div class="container">
    <div style="height:120px"></div>
    <h4>Reset your password.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <label asp-for="Input.Email" class="mt-3"></label>
                <div class="form-group mb-3">                   
                    <input asp-for="Input.Email" class="form-control" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>               

                <label asp-for="Input.Password"></label>
                <div class="form-group mb-3">                    
                    <input asp-for="Input.Password" type="password" class="form-control" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
       

                <label asp-for="Input.ConfirmPassword"></label>
                <div class="form-group mb-3">                
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" required  />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
              
             
                <br/>
                <button type="submit" class="btn btn-primary mb-3">Reset</button>
            </form>
        </div>
    </div>
</div>

